<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    android:gravity="center"
    tools:context="hasan.aporbo.com.houserentsystembeta.Views.GenerateBill">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etRenterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Renter Name: eg. Rahim"
            android:inputType="textPersonName" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="2dp"
            android:background="#000000" />

        <EditText
            android:id="@+id/etMeterSerial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Meter Serial:eg. 012923232312"
            android:inputType="textPersonName" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="2dp"
            android:background="#000000" />

        <EditText
            android:id="@+id/etMeterReading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Meter Reading: eg.7373773737"
            android:inputType="textPersonName" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="2dp"
            android:background="#000000" />


        <Button
            android:id="@+id/billGenerate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_background_button"
            android:text="Bill Generate" />
    </LinearLayout>

</LinearLayout>
